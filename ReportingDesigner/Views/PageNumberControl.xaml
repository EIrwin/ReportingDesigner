<views:ReportControlView x:Class="ReportingDesigner.Views.PageNumberControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:views="clr-namespace:ReportingDesigner.Views"
             mc:Ignorable="d"
             Background="Transparent"
             BorderBrush="Transparent"
             Position="{Binding Position,Mode=TwoWay}"
             BorderThickness="0">
              
    <TextBlock x:Name="PageNumber" Text="{Binding PageNumber, Mode=TwoWay}"/>
</views:ReportControlView>
