<Window x:Class="ReportingDesigner.Views.PageTemplateCreationOptionsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Page Template Options" SizeToContent="Height" Width="350" WindowStartupLocation="CenterScreen">
    <StackPanel Margin="10">
        
        <!-- Name -->
        <TextBlock>Name</TextBlock>
        <TextBox x:Name="NameTextBox" Text="{Binding Name,Mode=TwoWay}"></TextBox>

        <!-- Button Panel-->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
            <Button Margin="10,0" x:Name="CreateButton" Click="CreateButton_Click">Create</Button>
            <Button Margin="10,0" x:Name="CancelButton" Click="CancelButton_Click">Cancel</Button>
        </StackPanel>

    </StackPanel>
</Window>
