<Window x:Class="ReportingDesigner.Views.PageTemplates.PageTemplateSaveWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Save Page Template" SizeToContent="Height" Width="300">
    <StackPanel Margin="10">
        <TextBlock>Name</TextBlock>
        <TextBox x:Name="Name" Text="{Binding PageTemplate.Name,Mode=TwoWay}"/>
        <TextBlock>Description</TextBlock>
        <TextBox x:Name="DescriptionTextBox" Text="{Binding PageTemplate.Description,Mode=TwoWay}"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10">
            <Button x:Name="SaveButton" Width="75" Margin="10,0" Click="SaveButton_Click">Save</Button>
            <Button x:Name="CancelButton" Width="75" Margin="10,0" Click="CancelButton_Click">Cancel</Button>
        </StackPanel>
    </StackPanel>
        
</Window>
